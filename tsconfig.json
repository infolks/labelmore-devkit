{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es6",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true
    },
    "typedocOptions": {
        "mode": "file",
        "json": "docs/output.json"
    },
    "include": [
        "./src/**/*"
    ]
}